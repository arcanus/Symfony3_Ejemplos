<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Ejemplo autenticación form login{% endblock %}</title>
        {% block styles %}
          <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css')}}">
          <link href="{{ asset('css/starter-template.css') }}" rel="stylesheet">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

          {% if is_granted('IS_AUTHENTICATED_FULLY') %}

            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Ejemplo Autenticación Form Login</a>
                  </div>
                  <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                      <li class="active"><a href="{{ path('index') }}">Public</a></li>
                      <li><a href="{{ path('user') }}">User</a></li>
                      {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin') }}">Admin</a></li>
                      {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <li class="active"><a href="{{ path('logout') }}">Salir</a></li>
                    </ul>
                  </div><!--/.nav-collapse -->
                </div>
              </nav>

            {% endif %}

            <div class="container">

              <div class="starter-template">
                {% block body %}
                {% endblock %}
              </div>

            </div><!-- /.container -->

        {% block javascripts %}{% endblock %}
    </body>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

</html>
